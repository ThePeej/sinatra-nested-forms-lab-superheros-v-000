<h1>Create A Team and Heroes!</h1>
<form method="POST" action="/teams">
  <div><label for="team[name]">Team Name:</label>
  <input type="text" id="team[name]" name="team[name]"/></div>
  <div><label for="team[motto]">Team Motto:</label>
  <input type="text" id="team[motto]" name="team[motto]"/></div>
  
  <h2>Hero 1</h2>
  <div><label for="member1_name">Hero's Name:</label>
  <input type="text" id="member1_name" name="team[heroes][][name]"/></div>
  <div><label for="member1_power">Hero's Power:</label>
  <input type="text" id="member1_power" name="team[heroes][][power]"/></div>
  <div><label for="member1_bio">Hero's Biography:</label>
  <input type="text" id="member1_bio" name="team[heroes][][bio]"/></div>
  
  <h2>Hero 2</h2>
  <div><label for="member2_name">Hero's Name:</label>
  <input type="text" id="member2_name" name="team[heroes][][name]"/></div>
  <div><label for="member2_power">Hero's Power:</label>
  <input type="text" id="member2_power" name="team[heroes][][power]"/></div>
  <div><label for="member2_bio">Hero's Biography:</label>
  <input type="text" id="member2_bio" name="team[heroes][][bio]"/></div>
  
  <h2>Hero 3</h2>
  <div><label for="member3_name">Hero's Name:</label>
  <input type="text" id="member3_name" name="team[heroes][][name]"/></div>
  <div><label for="member3_power">Hero's Power:</label>
  <input type="text" id="member3_power" name="team[heroes][][power]"/></div>
  <div><label for="member3_bio">Hero's Biography:</label>
  <input type="text" id="member3_bio" name="team[heroes][][bio]"/></div>
  
  
  <div><input type="submit" value="Save The World!"/></div>
</form>


